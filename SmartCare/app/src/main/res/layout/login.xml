<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/logo"
        android:paddingTop="15dp"
        android:orientation="vertical"
        android:background="@color/customize_green">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center">
            <ImageView
                android:layout_width="220dp"
                android:layout_height="100dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/smart_care_logo"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--                    <TextView-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:text="Smart Care"-->
                <!--                        android:layout_marginTop="10dp"-->
                <!--                        android:textSize="20dp"-->
                <!--                        android:fontFamily="@font/poppinsbold"-->
                <!--                        android:textColor="@color/white"/>-->
                <!--                    <TextView-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:text="Monitor your patient everywhere in real-time"-->
                <!--                        android:textSize="12dp"-->
                <!--                        android:layout_marginTop="-5dp"-->
                <!--                        android:fontFamily="@font/poppinsmedium"-->
                <!--                        android:textColor="@color/white"/>-->
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="0dp"
        android:id="@+id/wave"
        android:layout_below="@+id/logo"
        android:orientation="vertical"
        android:background="@drawable/wave">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loginForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wave"
        android:layout_marginTop="-13dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="Provincial Hospital"
            android:textColor="@color/customize_green"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/subtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center"
            android:text="Monitor your patient wherever you want."
            android:textColor="@color/customize_green"
            android:textSize="13dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/usernameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:drawableRight="@drawable/username_icon"
            android:drawablePadding="10dp"
            android:hint="Username"
            android:inputType="text"
            android:textColorHint="@color/hint"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:drawableRight="@drawable/password_icon"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="@color/hint"
            android:textSize="18dp" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_button_layout"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/loginForm"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center"
            android:text="Version 1.0"
            android:textColor="@color/lightGray"
            android:textSize="12dp">

        </TextView>

    </LinearLayout>


</RelativeLayout>