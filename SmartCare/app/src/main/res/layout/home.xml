<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Smart Care"
                android:textSize="30dp"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/customize_green"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Smart Care is an android application that allows you to monitor patient condition real-time"
                android:textSize="12dp"
                android:textStyle="italic"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/customize_green"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/wave1">
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/customize_green"
            android:paddingTop="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!-- First and second button-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:id="@+id/patient_list_btn">
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:background="@drawable/home_button_layout"
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginRight="5dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/home_patient_icon"
                            android:background="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Patient"
                            android:textSize="15dp"
                            android:fontFamily="@font/poppinsmedium"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:background="@drawable/home_button_layout"
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="15dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/home_register_icon"
                            android:background="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Register"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:fontFamily="@font/poppinsmedium"/>
                    </LinearLayout>
                </LinearLayout>
                <!-- First and second button-->

                <!-- third and fourth button-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:background="@drawable/home_button_layout"
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginRight="15dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/home_dismiss_patient"
                            android:background="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dismiss"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:fontFamily="@font/poppinsmedium"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:background="@drawable/home_button_layout"
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="15dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/home_share_icon"
                            android:background="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:fontFamily="@font/poppinsmedium"/>
                    </LinearLayout>
                </LinearLayout>
                <!-- third and fourth button-->

                <!-- last button-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:background="@drawable/home_button_layout"
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginRight="15dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/home_account_icon"
                            android:background="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Account"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:fontFamily="@font/poppinsmedium"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:background="@drawable/home_button_layout"
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="15dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/home_log_icon"
                            android:background="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Log"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:fontFamily="@font/poppinsmedium"/>
                    </LinearLayout>
                </LinearLayout>
                <!-- last button-->

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/customize_green"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="italic"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="10dp"
                android:padding="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All Rights Reserved 2022 Smart Care Solution"
                android:gravity="center"
                android:textStyle="italic"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/customize_green"
                android:textSize="10dp"
                android:padding="5dp"/>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>