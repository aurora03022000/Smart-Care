<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartcare">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Smart Care"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".EditPatientRecord"></activity>
        <activity android:name=".EditPatientInfo" />
        <activity android:name=".LiveMonitoring" />
        <activity android:name=".PatientInfo" />
        <activity android:name=".PatientLogs" />
        <activity android:name=".Monitoring" />
        <activity android:name=".Account" />
        <activity android:name=".Home" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login" />
        <activity android:name=".SharePatient" />
        <activity android:name=".SearchUserShare" />
        <activity android:name=".SharingMenu" />
        <activity android:name=".Patient" />
        <activity android:name=".DismissPatient" />
        <activity android:name=".Register" />
        <activity android:name=".About" />
        <activity android:name=".Contact" />
    </application>

</manifest>