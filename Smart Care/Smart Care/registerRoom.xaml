            <DockPanel>
                <Image Source="operating-room.png" Height="21" Width="24" Margin="0,0,5,0" />
                <TextBlock Text="Add room" VerticalAlignment="Center" />
            </DockPanel>
        </Button>
    </Grid>
</Window>
