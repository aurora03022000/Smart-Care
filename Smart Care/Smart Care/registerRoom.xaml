        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Smart_Care"
        mc:Ignorable="d"
        Title="registerRoom" Height="202.154" Width="445.146" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
